@model Book

<div class="col-lg-4">
    <img class="img-thumbnail" src="@Model.Image" alt="@Model.Name"/>
    <h2> @Model.Name</h2>

    <a class="nav-link" href="/Authors/@Model.Author.Id">
        <h3>@Model.Author.Name @Model.Author.Surname</h3>
    </a>

    <p>@Model.ShortDescription</p>
    <p>Цена: @Model.Price.ToString("c")</p>
    <p>
        <a class="btn btn-warning" asp-controller="ShopBasket" asp-action="AddToBasket" asp-route-id="@Model.Id">Добавить в корзину</a>
    </p>
    <p>
        <a class="btn btn-warning" asp-controller="DetailBookPage" asp-action="Index" asp-route-id="@Model.Id">Подробнее</a>
    </p>
</div>