@model AuthorViewModel


@{
    if (Model == null)
    {
        <a style="font-size: xx-large">АШЫЫЫБКА ТАКОВА АФТАРА НЕТ</a>
    }
    else
    {
        <h3>@Model.Author.Name @Model.Author.Surname </h3>
        <h4>Дата рождения: @Model.Author.DateOfBirth Дата смерти: @Model.Author.DateOfDeath </h4>                                             
        <h5>@Model.Author.LifeDescription</h5>

        if (!Model.Books.Any())
        {
            <a style="font-size: xx-large">в данный момент книг этого автора нет</a>
        }
        foreach (var book in Model.Books)
        {
            @Html.Partial("AllBooks", book)
        }
    }


}